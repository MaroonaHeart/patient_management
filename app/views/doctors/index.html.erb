<%= link_to 'Главная', root_path %>
<p> </p>
<div> 
  <% @doctors.each do |doctor| %>
    <%= @offset += 1%> 
    <%= doctor.full_name %>
    <p> </p>
  <% end %>
</div>

 <% if params[:page].to_i > 1 %>
    <%= link_to "Предыдущая страница", doctors_path(page: params[:page].to_i - 1) %>
  <% end %>

  <% (1..@total_pages).each do |page_number| %>
  <% if page_number == params[:page].to_i || (params[:page].nil? && page_number == 1) %>
    <strong><%= page_number %></strong>
  <% else %>
    <%= link_to page_number, doctors_path(page: page_number) %>
  <% end %>
<% end %>
  
<% if params[:page].to_i < @total_pages %>
  <%= link_to "Следующая страница", doctors_path(page: params[:page].to_i + 1) %>
<% end %>
